{% extends 'base.html.twig' %}

{% block title %}ProductType index{% endblock %}

{% block body %}
    <h1>ProductType index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Price</th>
                <th>CreateAt</th>
                <th>UpdateAt</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product_type in product_types %}
            <tr>
                <td>{{ product_type.id }}</td>
                <td>{{ product_type.name }}</td>
                <td>{{ product_type.price }}</td>
                <td>{{ product_type.createAt ? product_type.createAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ product_type.updateAt ? product_type.updateAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ product_type.status }}</td>
                <td>
                    <a href="{{ path('app_product_type_show', {'id': product_type.id}) }}">show</a>
                    <a href="{{ path('app_product_type_edit', {'id': product_type.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_product_type_new') }}">Create new</a>
{% endblock %}
